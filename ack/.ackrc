# Use color, even when piping to another process
--color

# Add types
--type-set=puppet=.pp,.erb
--type-set=sublime=.sublime-project,.sublime-workspace

# Ignores
--nosublime
--ignore-dir=bin
--ignore-dir=local
--ignore-dir=thirdparty
--ignore-dir=packaging
--ignore-file=is:cscope.out
--ignore-file=is:tags
--ignore-file=is:.tags
